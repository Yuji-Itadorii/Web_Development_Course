<%- include("partials/header") -%>
    <div>
        <div class="heading">
            <h1>Fill Order Form </h1>
        </div>
        <div class="box">
            <form class="row g-3" action="/fill_manufacture" method="POST">
                <div class="col-md-12">
                    <label  class="form-label">
                        Order Id Number
                    </label>
                    <input type="text" class="form-control"  name="order_id" value="XB120" required>
                </div>
                <div class="col-md-12">
                    <label  class="form-label">
                        To
                    </label>
                    <input type="text" class="form-control" name="to"  required>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">
                        From
                    </label>
                    <input type="text" class="form-control" name="from" required />
                </div>
                <div class="col-12">
                    <select class="form-select" aria-label="Default select example" name="transporter">
                        <option selected>Select Quantity</option>
                        <option value= "1">1 ton</option>
                        <option value= "2">2 ton</option>
                        <option value= "3">3 ton</option>
                      </select>
                </div>
                <div class="col-md-12">
                    <label for="inputCity" class="form-label">
                        Address
                    </label>
                    <input type="text" class="form-control" name="address" >
                </div>
                <div class="col-12">
                    <select class="form-select" aria-label="Default select example" name="transporter">
                        <option selected>Select Transporter</option>
                        <% List.forEach((obj)=>{ %>
                        <option value= "<%=obj.firstName %> <%=obj.lastName %>">
                            <%=obj.firstName %> 
                            <%=obj.lastName %>
                        </option>
                        <%}); %>
                      </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        Send to Transporter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include("partials/footer") -%>